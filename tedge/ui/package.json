{
    "name": "tedge-mgmt-ui",
    "private": true,
    "version": "0.0.2",
    "scripts": {
        "start": "ng serve",
        "build": "NODE_OPTIONS=--max_old_space_size=2048 && ng build",
        "clean": "rm -rf build && rm -rf dist",
        "format": "prettier --write 'src/**/*.ts'",
        "lint": "eslint --ext .ts,.component.html . --fix",
        "compress": "mkdir -p dist && tar -czvf dist/tedge-mgmt-ui.tar.gz -C build .",
        "release:compress": "npm run build && npm run compress",
        "release": "NODE_OPTIONS=--max_old_space_size=2048 && c8ycli build  --output dist --env.mode=development"
    },
    "main": "src/index.ts",
    "dependencies": {
        "@angular/animations": "^16.2.12",
        "@angular/cdk": "^16.2.0",
        "@angular/common": "^16.2.12",
        "@angular/compiler": "^16.2.12",
        "@angular/core": "^16.2.12",
        "@angular/forms": "^16.2.12",
        "@angular/platform-browser": "^16.2.12",
        "@angular/platform-browser-dynamic": "^16.2.12",
        "@angular/router": "^16.2.12",
        "@angular/upgrade": "^16.2.12",
        "@c8y/client": "1019.4.11",
        "@c8y/ngx-components": "^1019.4.11",
        "@c8y/style": "1019.4.11",
        "@c8y/bootstrap": "1019.4.11",
        "@c8y/websdk": "^1019.0.7",
        "@ngx-formly/bootstrap": "^6.3.0",
        "@ngx-formly/core": "^6.3.0",
        "@ngx-translate/core": "14.0.0",
        "@robloche/chartjs-plugin-streaming": "^3.1.0",
        "chart.js": "^4.4.1",
        "chartjs-adapter-luxon": "^1.3.1",
        "d3-scale-chromatic": "^3.0.0",
        "luxon": "^3.4.4",
        "ng2-charts": "^4.1.1",
        "ngx-bootstrap": "11.0.2",
        "ngx-socket-io": "~4.5.0",
        "rxjs": "^7.4.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.13.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^16.2.12",
        "@angular-eslint/eslint-plugin": "^17.2.0",
        "@angular-eslint/eslint-plugin-template": "^17.2.0",
        "@angular-eslint/template-parser": "^17.2.0",
        "@angular/compiler-cli": "^16.2.12",
        "@angular/language-service": "^16.2.12",
        "@angular/localize": "^16.2.12",
        "@angular/service-worker": "^16.2.12",
        "@types/jest": "^28.1.6",
        "@types/ws": "<8.5.5",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "eslint-plugin-import": "^2.29.1",
        "prettier": "^3.1.1",
        "typescript": "~5.1.3"
    }
}
